{
  c1 = new TCanvas("c1","A graph with error bars");
   c1->SetGrid();
   c1->GetFrame()->SetFillColor(21);
   c1->GetFrame()->SetBorderSize(12);
   const Int_t n = 18; //number of data points
   Double_t x[n]  ={0.05,
		    0.1,
		    0.15,
		    0.2,
		    0.25,
		    0.3,
		    0.35,
		    0.4,
		    0.45,
		    0.5,
		    0.55,
		    0.6,
		    0.65,
		    0.7,
		    0.75,
		    0.8,
		    0.85,
		    0.9,
   }; //x values
  
   Double_t y[n] = {4E-13,
		    2E-13,
		    2E-13,
		    2E-13,
		    0,
		    0,
		    0,
		    0,
		    -2E-13,
		    -2E-13,
		    -2E-13,
		    -2E-13,
		    -2E-13,
		    -2E-13,
		    -4E-13,
		    -4E-13,
		    -4E-13,
		    -4E-13,





 }; //y values

   
   Double_t ex[n] ={0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    0.001,
		    
   }; //error of x values
   
   Double_t ey[n] = {2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
		     2E-13,
   }; //error of y values

   
   gr = new TGraphErrors(n,x,y,ex,ey);
   gr->SetTitle(";Voltage(V); Current(A)");
   gr->SetMarkerColor(4);
   gr->SetMarkerStyle(21);
   gr->Draw("AP");
   
   TF1 *f = new TF1("f","pol1",0,1);
   f->SetParameters(1, 1);
   f->SetLineColor(kRed+0);
   gr->Fit("f","R");
   gStyle->SetOptStat(111110);
   gStyle->SetOptFit(1111);
   //gr->GetXaxis()->SetLimits(0, 300);
   //gr->GetYaxis()->SetLimits( 0, 0.01);
   return c1;
}
